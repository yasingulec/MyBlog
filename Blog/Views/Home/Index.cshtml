@model IEnumerable<Post>
@{ 
    ViewBag.Title = "Blog Website";
    ViewBag.Description = "This blog about programming";
    ViewBag.Keywords = "C#,MSSQL,ORACLE";
}
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                   @await Component.InvokeAsync("Category")
    
                </div>
            </div>
            <div class="col-md-9">
                @foreach (var item in Model)
                {
                    <div class="card">
                        <div class="card-header">
                            @item.Created
                        </div>
                        <img src="/content/blog/@item.Image" class="card-img-top" alt="...">

                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">@item.Description</p>
                            <a asp-action="Post" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                        </div>
                    </div>
                    <br />
                }
            </div>
        </div>
    </div>