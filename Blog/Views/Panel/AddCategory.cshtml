@model Category 
<div class="container" style="margin-top:210px;">
    <form method="post" class="editform mt-5" asp-action="AddCategory" asp-controller="Panel">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input class="form-control" asp-for="Name" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <input class="btn btn-primary btn-lg" value="Submit" type="submit" />
        </div>
    </form>
</div>