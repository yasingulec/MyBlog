@model PostViewModel

<div>
    <form method="post" asp-action="Edit" asp-controller="Panel" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <div>
            <label asp-for="Title"></label>
            <input asp-for="Title" />
        </div>
        <br />
        <div>
            <label asp-for="Body"></label>
            <input asp-for="Body" />
        </div>
        <div>
            <label asp-for="Image"></label>
            <input asp-for="Image" />
        </div>

        <div>
            <input value="Submit" type="submit" />
        </div>

    </form>
</div>