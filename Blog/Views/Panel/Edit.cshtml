@model PostViewModel
@{

}
<link href="~/lib/Trumbowyg-master/dist/ui/trumbowyg.css" rel="stylesheet" />
<div class="container" style="margin-top:210px;">
    <form method="post" class="" asp-action="Edit" asp-controller="Panel" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input class="form-control" asp-for="Title" />
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Tags"></label>
                    <input class="form-control" asp-for="Tags" />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input class="form-control" asp-for="Description" />
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label>Category</label>
                    <select class="form-control" asp-for="CategoryId">
                        <option disabled selected value="">Select Category</option>
                        <option value="1">Programming</option>
                        <option value="2">Technology</option>
                    </select>
                </div>
            </div>
            <div class="col">
                @*<div class="form-group">
            <label asp-for="Image"></label>
            <input asp-for="CurrentImage" type="hidden" />
            <input class="custom-file-input" asp-for="Image" />
        </div>*@

                <div class="form-group">
                    <label asp-for="Image"></label>
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="hidden" asp-for="CurrentImage">

                            <input type="file" asp-for="Image" class="custom-file-input" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04">
                            <label class="custom-file-label" for="inputGroupFile04"></label>
                        </div>
                    </div>
                </div>

              

            </div>



        </div>

        <div class="row">
            <div class="col">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="isFeatured" id="defaultCheck1">
                    <label class="form-check-label"  for="defaultCheck1">
                        is Featured?
                    </label>
                </div>
            </div>
        </div>



        <div class="form-group mt-5">
            <label asp-for="Body"></label>
            <textarea class="form-control" id="editor" asp-for="Body"></textarea>
        </div>




        <div class="alert-danger d-inline-block" role="alert">
            @Html.ValidationMessageFor(a => a.Image)
        </div>
        <div class="form-group">
            <input class="btn btn-primary btn-lg" value="Submit" type="submit" />
        </div>
    </form>
</div>

@section scripts{
    <script src="~/lib/Trumbowyg-master/dist/trumbowyg.min.js"></script>
    <script>
        $('#editor').trumbowyg();
    </script>
<script>

    $('.custom-file-input').on('change', function () {
        let fileName = $(this).val().split('\\').pop();
        $(this).next('.custom-file-label').addClass("selected").html(fileName);     
    });
</script>
    
}